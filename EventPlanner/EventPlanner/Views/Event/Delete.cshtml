@model EventPlanner.Models.Event

<h2>Event Details</h2>
<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Date:</strong> @Model.Date</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Host:</strong> @Model.Host?.Name</p>
<a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
