@model EventPlanner.Models.Host

<h2>@ViewContext.RouteData.Values["action"] Host</h2>
<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
  @if (Model.HostId != 0)
  {
    <input type="hidden" asp-for="HostId" />
  }
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="ContactInfo"></label>
    <input asp-for="ContactInfo" class="form-control" />
  </div>
  <button type="submit" class="btn btn-success">Save</button>
</form>
