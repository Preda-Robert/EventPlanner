@model IEnumerable<EventPlanner.Models.Host>

<h2>Hosts</h2>
<a asp-action="Create" class="btn btn-primary">Create New Host</a>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Info</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var host in Model)
    {
      <tr>
        <td>@host.Name</td>
        <td>@host.ContactInfo</td>
        <td>
          <a asp-action="Details" asp-route-id="@host.HostId" class="btn btn-info">View</a>
          <a asp-action="Edit" asp-route-id="@host.HostId" class="btn btn-warning">Edit</a>
          <a asp-action="Delete" asp-route-id="@host.HostId" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
