@model EventPlanner.Models.Guest

@{
  ViewData["Title"] = "Delete Guest";
}

<h2>Delete Guest</h2>

<h4>Are you sure you want to delete this guest?</h4>
<div>
  <dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
  </dl>
</div>

<form asp-action="Delete">
  <input type="hidden" asp-for="GuestId" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
