@model IEnumerable<EventPlanner.Models.Registration>

@{
  ViewData["Title"] = "My Registrations";
}

<h2>My Registered Events</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Event Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var reg in Model)
    {
      <tr>
        <td>@reg.Event.Title</td>
        <td>
          <a asp-controller="Event" asp-action="Details" asp-route-id="@reg.EventId" class="btn btn-info btn-sm">View</a>

          <form asp-action="Unregister" asp-route-id="@reg.RegistrationId" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to unregister?')">Unregister</button>
          </form>
        </td>
      </tr>
    }
  </tbody>
</table>
