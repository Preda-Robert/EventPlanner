@model EventPlanner.Models.Registration

@{
  ViewData["Title"] = "Create Registration";
}

<h2>Create Registration</h2>

<form asp-action="Create">
  <div class="form-group">
    <label asp-for="UserId"></label>
    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
  </div>

  <div class="form-group">
    <label asp-for="EventId"></label>
    <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
  </div>

  <div class="form-group">
    <label asp-for="RegistrationDate"></label>
    <input asp-for="RegistrationDate" class="form-control" type="date" />
  </div>

  <div class="form-check mt-2">
    <input asp-for="IsConfirmed" class="form-check-input" />
    <label asp-for="IsConfirmed" class="form-check-label"></label>
  </div>

  <button type="submit" class="btn btn-success mt-3">Create</button>
</form>
